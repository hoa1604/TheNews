@model TheNewsWebsite.Models.TheNewsWebsite.Admin

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-title">
    <div>
        <h3>Quản lý quản trị viên</h3>
        <p>Xem thông tin quản trị viên</p>

    </div>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            Tên đăng nhập
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt>
            Tên người dùng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Quyền hạn
        </dt>
        @if (Model.Authority == 1)
            {
            <dd>
                Super Admin
            </dd>
        }
        else
        {
            <dd>
                Admin
            </dd>
        }
        <dt>
            Đang hoạt động
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <input class="btn btn-warning" type="button" value="Sửa " onclick="location.href='@Url.Action("Edit","Admins",new{@Model.Id})'" />
    <input class="btn btn-default" type="button" value="Quay lại" onclick="location.href='@Url.Action("Index","Admins")'" />
</div>

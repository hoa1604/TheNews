@model TheNewsWebsite.Models.TheNewsWebsite.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <div>
        <h3>Quản lý độc giả</h3>
        <p>Xem thông tin độc giả</p>

    </div>
</div><div>
    <dl class="dl-horizontal">
        <dt>
            Tên độc giả
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Giới tính
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Tình trạng
        </dt>
        @if (Model.Status == 1)
        {
            <dd>
                Đang hoạt động
            </dd>
        }
        else
        {
            <dd>
                Đang bị khóa
            </dd>
        }
        <dt>
            Ngày tạo tài khoản
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>
</div>
<div>
    <input class="btn btn-warning" type="button" value="Khóa tài khoản " onclick="location.href='@Url.Action("Block","UsersAdmin",new{@Model.Id})'" />
    <input class="btn btn-default" type="button" value="Quay lại" onclick="location.href='@Url.Action("Index","UsersAdmin")'" />
</div>

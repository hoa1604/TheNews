@model TheNewsWebsite.Models.TheNewsWebsite.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <div>
        <h3>Quản lý độc giả</h3>
        <p>Xóa độc giả</p>

    </div>
</div>
<h3>Bạn có chắc muốn khóa tài khoản này không?</h3>
<div>
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="Id" />
        <dt>
            Tên độc giả
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Giới tính
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Tình trạng
        </dt>
        @if (Model.Status == 1)
        {
            <dd>
                Đang hoạt động
            </dd>
        }
        else
        {
            <dd>
                Đang bị khóa
            </dd>
        }
        <dt>
            Ngày tạo tài khoản
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreate)
        </dd>
    </dl>

    <form asp-action="Block">
        <div class="form-actions no-color">
            <input type="submit" value="Khóa" class="btn btn-danger" />
            <input class="btn btn-primary" type="button" value="Bỏ qua" onclick="location.href='@Url.Action("Index","UsersAdmin")'" />
        </div>
    </form>
</div>

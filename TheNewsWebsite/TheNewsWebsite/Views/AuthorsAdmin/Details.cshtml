@model TheNewsWebsite.Models.TheNewsWebsite.Author

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-title">
    <div>
        <h3>Quản lý tác giả</h3>
        <p>Thông tin chi tiết</p>

    </div>
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
           Tên tác giả
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if ( @Model.Posts.Count() != null)
        {
            <dt>
                Số bài đăng
            </dt>
            <dd>
                @Model.Posts.Count()
            </dd>
        }
        
        <dt>
            Tình trạng
        </dt>
        <dd>
            @ViewBag.Status
        </dd>
    </dl>
</div>
<div>
    <input class="btn btn-warning" type="button" value="Sửa " onclick="location.href='@Url.Action("Edit","AuthorsAdmin",new{@Model.Id})'" /> 
    <input class="btn btn-default" type="button" value="Quay lại" onclick="location.href='@Url.Action("Index","AuthorsAdmin")'" />
</div>
